{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false
  },
  "include": [
    "src/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}